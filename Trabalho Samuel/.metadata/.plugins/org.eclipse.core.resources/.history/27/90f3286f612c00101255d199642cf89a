package com.cinelume.view;

import com.cinelume.controller.SerieController;
import com.cinelume.model.Serie;
import com.cinelume.util.InputUtils;
import java.util.List;

public class SerieView {
    private final SerieController controller = new SerieController();
    
    public void buscarSeries() {
        String termo = InputUtils.lerString("Digite o nome da série: ");
        List<Serie> resultados = controller.buscarSeries(termo);
        
        if (resultados.isEmpty()) {
            System.out.println("Nenhuma série encontrada!");
            return;
        }
        
        System.out.println("\n--- RESULTADOS ---");
        for (int i = 0; i < resultados.size(); i++) {
            Serie serie = resultados.get(i);
            System.out.printf("%d. %s (%s) ★ %.1f\n",
                i + 1,
                serie.getName(),
                serie.getPremiered() != null ? serie.getPremiered().substring(0, 4) : "Ano desconhecido",
                serie.getRating());
        }
    }
}